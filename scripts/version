#!/bin/sh
set -eu

cd "$(dirname "$0")/../"

if test -d .git; then
  if git describe --tags --match 'jq-*' >/dev/null 2>&1; then
    git describe --tags --match 'jq-*' --dirty | sed 's/^jq-//'
  else
    branch=$(git rev-parse --abbrev-ref HEAD)
    commit=$(git describe --always --dirty)
    echo "${branch}-${commit}"
  fi
elif [[ "$(basename $(pwd))" =~ ^jq-jq-([0-9]+\.[0-9]+(\.[0-9]+)?)$ ]]; then
  echo ${BASH_REMATCH[1]}
else
  exit 1
fi
